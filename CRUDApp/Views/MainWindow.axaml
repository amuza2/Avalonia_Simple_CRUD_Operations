<Window
    Icon="/Assets/avalonia-logo.ico"
    Title="CRUDApp"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="CRUDApp.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:CRUDApp.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="Auto, *" Margin="10">
        <Grid
            ColumnDefinitions="Auto, *"
            ColumnSpacing="10"
            Margin="10"
            RowDefinitions="Auto, Auto,Auto,Auto,Auto,Auto"
            RowSpacing="10">
            <TextBlock Text="First Name" VerticalAlignment="Center" />
            <TextBox
                Grid.Column="1"
                Text="{Binding Firstname}"
                Watermark="enter first name" />

            <TextBlock
                Grid.Column="0"
                Grid.Row="1"
                Text="Last Name"
                VerticalAlignment="Center" />
            <TextBox
                Grid.Column="1"
                Grid.Row="1"
                Text="{Binding Lastname}"
                Watermark="enter last name" />

            <TextBlock
                Grid.Column="0"
                Grid.Row="2"
                Text="City Name"
                VerticalAlignment="Center" />
            <TextBox
                Grid.Column="1"
                Grid.Row="2"
                Text="{Binding City}"
                Watermark="enter city" />

            <TextBlock
                Grid.Column="0"
                Grid.Row="3"
                Text="Address"
                VerticalAlignment="Center" />
            <TextBox
                Grid.Column="1"
                Grid.Row="3"
                Text="{Binding Address}"
                Watermark="enter address" />

            <StackPanel
                Grid.Column="1"
                Grid.Row="4"
                Orientation="Horizontal"
                Spacing="10">
                <Button
                    Command="{Binding SaveCustomerCommand}"
                    Content="{Binding SaveBtnState}"
                    HorizontalContentAlignment="Center"
                    Width="70" />
                <Button Command="{Binding DeleteCustomerCommand}" Content="Delete" />
                <Button Command="{Binding ClearFieldsCommand}" Content="Clear" />
            </StackPanel>
        </Grid>

        <StackPanel Grid.Column="1" Margin="10">
            <Button Command="{Binding LoadCustomerDataCommand}" Content="Refresh" />

            <DataGrid
                AutoGenerateColumns="{Binding !IsLoading}"
                IsReadOnly="True"
                IsVisible="{Binding LoadCustomerDataCommand}"
                ItemsSource="{Binding Customers}"
                SelectedItem="{Binding SelectedCustomer}" />

            <StackPanel
                HorizontalAlignment="Center"
                IsVisible="{Binding IsLoading}"
                VerticalAlignment="Center">
                <ProgressBar
                    Height="10"
                    IsIndeterminate="True"
                    Margin="0,10"
                    ShowProgressText="False"
                    Value="14" />

            </StackPanel>
        </StackPanel>
    </Grid>

</Window>
